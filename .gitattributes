# Enforce LF line endings for all text files
* text=auto eol=lf

# Shell scripts
*.sh text eol=lf

# TypeScript/JavaScript
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf

# JSON/YAML
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Markdown
*.md text eol=lf

# Python
*.py text eol=lf

# Configuration
*.conf text eol=lf
*.config text eol=lf
*.ini text eol=lf
*.toml text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files (explicitly mark as binary to prevent conversion)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.sqlite binary
*.db binary
