{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://qa-intelligence.com/schemas/a2a/ContextResult.schema.json",
  "title": "Context Result Envelope",
  "description": "Context retrieval results with ranked documents/nodes",
  "type": "object",
  "required": ["meta", "payload"],
  "properties": {
    "meta": {
      "$ref": "EnvelopeMeta.schema.json",
      "description": "Envelope metadata with type=ContextResult"
    },
    "payload": {
      "type": "object",
      "required": ["results"],
      "properties": {
        "results": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "content"],
            "properties": {
              "id": {
                "type": "string",
                "description": "Result identifier (vector store ID, graph node ID, etc.)"
              },
              "content": {
                "type": "object",
                "description": "Result content (structure varies by query type)"
              },
              "score": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "description": "Relevance score (0.0 to 1.0, higher is more relevant)"
              },
              "metadata": {
                "type": "object",
                "description": "Result metadata (e.g., source, timestamp, tags)"
              },
              "embedding": {
                "type": "array",
                "items": {"type": "number"},
                "description": "Embedding vector (only if include_embeddings=true)"
              },
              "relationships": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "type": {"type": "string"},
                    "target_id": {"type": "string"},
                    "properties": {"type": "object"}
                  }
                },
                "description": "Graph relationships (only for graph traversal results)"
              }
            }
          },
          "description": "Retrieved results (sorted by relevance)"
        },
        "total_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of matching results (may be > results.length if limited)"
        },
        "query_duration_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Query execution time in milliseconds"
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["qdrant", "neo4j", "postgres", "redis", "memory"]
          },
          "uniqueItems": true,
          "description": "Data sources used for retrieval"
        },
        "explain": {
          "type": "object",
          "description": "Explainability metadata (H4R ranker decisions, SCS budgeting)",
          "properties": {
            "ranker": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["ref", "score", "signals", "kept"],
                "properties": {
                  "ref": {
                    "type": "string",
                    "description": "Result reference ID"
                  },
                  "score": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1,
                    "description": "Final aggregated score"
                  },
                  "signals": {
                    "type": "object",
                    "required": [
                      "recency",
                      "frequency",
                      "importance",
                      "causality",
                      "novelty_penalty",
                      "trust",
                      "sensitivity_penalty"
                    ],
                    "properties": {
                      "recency": {"type": "number", "minimum": 0, "maximum": 1},
                      "frequency": {"type": "number", "minimum": 0, "maximum": 1},
                      "importance": {"type": "number", "minimum": 0, "maximum": 1},
                      "causality": {"type": "number", "minimum": 0, "maximum": 1},
                      "novelty_penalty": {"type": "number", "minimum": 0, "maximum": 1},
                      "trust": {"type": "number", "minimum": 0, "maximum": 1},
                      "sensitivity_penalty": {"type": "number", "minimum": 0, "maximum": 1}
                    },
                    "additionalProperties": false
                  },
                  "kept": {
                    "type": "boolean",
                    "description": "Whether item passed threshold"
                  },
                  "reason": {
                    "type": "string",
                    "description": "Human-readable explanation"
                  }
                },
                "additionalProperties": false
              },
              "description": "Per-item ranking decisions"
            },
            "slicing": {
              "type": "object",
              "properties": {
                "total_redacted": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Number of items blocked/redacted by policy"
                },
                "total_dropped_budget": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Number of items dropped due to budget"
                },
                "budget_used": {
                  "type": "object",
                  "properties": {
                    "bytes": {"type": "integer", "minimum": 0},
                    "estimated_tokens": {"type": "integer", "minimum": 0},
                    "items": {"type": "integer", "minimum": 0}
                  }
                },
                "policy_degraded": {
                  "type": "boolean",
                  "description": "True if OPA unavailable and fallback rules used"
                }
              }
            },
            "timings": {
              "type": "object",
              "properties": {
                "retrieval_ms": {"type": "integer", "minimum": 0},
                "slicing_ms": {"type": "integer", "minimum": 0},
                "summarization_ms": {"type": "integer", "minimum": 0},
                "total_ms": {"type": "integer", "minimum": 0}
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
