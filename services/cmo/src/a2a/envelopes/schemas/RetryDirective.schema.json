{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://a2a.wesign.ai/schemas/RetryDirective.schema.json",
  "title": "RetryDirective",
  "description": "CMO retry directive sent to specialist for reattempt",
  "type": "object",
  "required": ["retry_depth", "target_specialist", "original_task", "context_adjustments"],
  "properties": {
    "retry_depth": {
      "type": "integer",
      "minimum": 0,
      "description": "Current retry depth (0 = first attempt, 1 = first retry, etc.)"
    },
    "target_specialist": {
      "type": "string",
      "pattern": "^[a-z0-9_-]+$",
      "description": "Specialist ID to handle retry"
    },
    "original_task": {
      "type": "object",
      "required": ["type", "inputs"],
      "properties": {
        "type": {
          "type": "string",
          "description": "Original task type"
        },
        "inputs": {
          "type": "object",
          "description": "Original task inputs"
        }
      },
      "description": "Original task that triggered the retry"
    },
    "previous_result": {
      "type": "object",
      "properties": {
        "summary": {
          "type": "array",
          "items": {"type": "string"}
        },
        "affordances": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["action", "why"],
            "properties": {
              "action": {"type": "string"},
              "why": {"type": "string"}
            }
          }
        },
        "qscore": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "description": "Previous attempt result for context"
    },
    "failure_reason": {
      "type": "object",
      "required": ["category", "explanation"],
      "properties": {
        "category": {
          "type": "string",
          "enum": [
            "SCHEMA_VIOLATION",
            "MISSING_EVIDENCE",
            "FLAKY_PATTERN",
            "SELECTOR_ISSUE",
            "POLICY_DEGRADED",
            "LOW_CONFIDENCE",
            "TIMEOUT",
            "INCONSISTENT",
            "UNKNOWN"
          ]
        },
        "explanation": {
          "type": "string"
        },
        "evidence": {
          "type": "object",
          "description": "Supporting evidence for classification"
        }
      },
      "description": "Why the previous attempt failed"
    },
    "context_adjustments": {
      "type": "object",
      "properties": {
        "budget_delta": {
          "type": "object",
          "properties": {
            "expand_bytes": {"type": "integer", "minimum": 0},
            "expand_tokens": {"type": "integer", "minimum": 0},
            "expand_items": {"type": "integer", "minimum": 0}
          },
          "description": "Budget expansions to apply"
        },
        "additional_hints": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Additional hints to guide specialist"
        },
        "include_schema": {
          "type": "boolean",
          "description": "Include expected schema in context"
        },
        "expected_schema": {
          "type": "object",
          "description": "Expected result schema (if include_schema=true)"
        },
        "focus_areas": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Specific areas to focus on (e.g., 'selector stability', 'evidence depth')"
        }
      },
      "description": "Adjustments to apply for retry attempt"
    },
    "max_retries_remaining": {
      "type": "integer",
      "minimum": 0,
      "description": "How many more retries allowed after this one"
    },
    "deadline": {
      "type": "string",
      "format": "date-time",
      "description": "Retry attempt deadline"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "original_message_id": {"type": "string", "pattern": "^[a-f0-9]{32}$"},
        "retry_sequence_id": {"type": "string", "pattern": "^[a-f0-9]{32}$"},
        "correlation_id": {"type": "string", "pattern": "^[a-f0-9]{32}$"}
      },
      "description": "Tracing metadata"
    }
  }
}
