# Production Dockerfile for Backend
# Multi-stage build for optimal image size and security

# =============================================================================
# Build Stage
# =============================================================================
FROM node:20-alpine AS builder

WORKDIR /build

# Install build dependencies
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    sqlite-dev \
    postgresql-dev

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies (including dev dependencies for build)
RUN npm ci --only=production --ignore-scripts && \
    npm ci --only=development --ignore-scripts

# Copy source code
COPY src/ ./src/

# Build the application
RUN npm run build && \
    npm prune --production

# =============================================================================
# Production Stage  
# =============================================================================
FROM node:20-alpine AS production

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S backend -u 1001 -G nodejs

# Install runtime dependencies
RUN apk add --no-cache \
    dumb-init \
    curl \
    postgresql-client \
    redis-tools

WORKDIR /app

# Copy built application
COPY --from=builder --chown=backend:nodejs /build/dist ./dist/
COPY --from=builder --chown=backend:nodejs /build/node_modules ./node_modules/
COPY --from=builder --chown=backend:nodejs /build/package*.json ./

# Copy production configuration
COPY --chown=backend:nodejs .env.production .env

# Create necessary directories
RUN mkdir -p /app/logs /app/artifacts && \
    chown -R backend:nodejs /app/logs /app/artifacts

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:${PORT:-3002}/health || exit 1

# Security: Run as non-root user
USER backend

# Expose application port
EXPOSE 3002

# Use dumb-init to handle signals properly
ENTRYPOINT ["dumb-init", "--"]

# Start the application
CMD ["node", "dist/server-enterprise.js"]