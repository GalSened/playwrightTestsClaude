# WeSign CI/CD Python Utilities Environment Configuration
# ====================================================
# Copy this file to .env and customize with your values
# DO NOT commit .env to version control

# WeSign Environment Configuration
WESIGN_ENVIRONMENT=DevTest
WESIGN_BASE_URL=https://devtest.comda.co.il

# Database Connection Strings
WESIGN_DEVTEST_CONNECTION_STRING=Server=devtest-db.comda.co.il;Database=WeSign_DevTest;Integrated Security=true;TrustServerCertificate=true;
WESIGN_STAGING_CONNECTION_STRING=Server=staging-db.comda.co.il;Database=WeSign_Staging;Integrated Security=true;TrustServerCertificate=true;
WESIGN_PROD_CONNECTION_STRING=Server=prod-db.comda.co.il;Database=WeSign_Production;Integrated Security=true;TrustServerCertificate=true;
WESIGN_LOCAL_CONNECTION_STRING=Server=localhost;Database=WeSign_Local;Integrated Security=true;TrustServerCertificate=true;

# JWT Configuration
WESIGN_JWT_SECRET=your-super-secret-jwt-key-here-change-in-production

# Jenkins Integration
JENKINS_USERNAME=your-jenkins-username
JENKINS_TOKEN=your-jenkins-api-token

# QA Intelligence Backend Integration
QA_INTELLIGENCE_API_KEY=your-api-key-here
QA_INTELLIGENCE_BASE_URL=http://localhost:8082

# Email Notifications (optional)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=notifications@example.com
SMTP_PASSWORD=your-smtp-password
NOTIFICATION_EMAIL_FROM=wesign-ci@example.com
NOTIFICATION_EMAIL_TO=team@example.com

# Webhook URLs (optional)
WEBHOOK_URL_SUCCESS=https://hooks.slack.com/services/your/success/webhook
WEBHOOK_URL_FAILURE=https://hooks.slack.com/services/your/failure/webhook

# Performance Thresholds (milliseconds)
ENDPOINT_RESPONSE_THRESHOLD_MS=3000
DATABASE_QUERY_THRESHOLD_MS=1000
SERVICE_CONNECTION_THRESHOLD_MS=1000

# Storage and Archival
ARTIFACT_STORAGE_PATH=C:\WeSignArtifacts
BACKUP_RETENTION_DAYS=30
MAX_LOG_SIZE_MB=100

# Security Settings
ENABLE_SSL_VERIFICATION=true
ALLOW_SELF_SIGNED_CERTS=false
MAX_RETRY_ATTEMPTS=3
TIMEOUT_SECONDS=30

# Windows Specific Settings
WINRM_USERNAME=administrator
WINRM_PASSWORD=your-winrm-password
REQUIRED_DISK_SPACE_GB=10
REQUIRED_MEMORY_GB=4

# Development Settings (for local testing)
DEBUG_MODE=false
VERBOSE_LOGGING=false
SKIP_VALIDATION=false
MOCK_EXTERNAL_SERVICES=false