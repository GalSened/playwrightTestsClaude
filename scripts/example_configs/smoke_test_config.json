{
  "endpoints": [
    {
      "name": "health_check",
      "url": "https://devtest.comda.co.il/health",
      "method": "GET",
      "expected_status": 200,
      "timeout_seconds": 5,
      "max_retries": 3,
      "retry_delay_seconds": 1.0,
      "validation_rules": {
        "response_contains": ["status", "timestamp"],
        "json_structure": true,
        "content_type": "application/json"
      }
    },
    {
      "name": "api_status",
      "url": "https://devtest.comda.co.il/api/status",
      "method": "GET",
      "expected_status": 200,
      "timeout_seconds": 10,
      "validation_rules": {
        "response_contains": ["version", "environment"],
        "json_structure": true
      }
    },
    {
      "name": "home_page",
      "url": "https://devtest.comda.co.il",
      "method": "GET",
      "expected_status": 200,
      "timeout_seconds": 10,
      "validation_rules": {
        "response_contains": ["WeSign", "DOCTYPE"],
        "content_type": "text/html"
      }
    },
    {
      "name": "auth_login_page",
      "url": "https://devtest.comda.co.il/login",
      "method": "GET",
      "expected_status": 200,
      "timeout_seconds": 10,
      "validation_rules": {
        "response_contains": ["login", "password"],
        "content_type": "text/html"
      }
    },
    {
      "name": "api_auth_test",
      "url": "https://devtest.comda.co.il/api/auth/test",
