        {
          "name": "User Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// ============================================================",
                  "// Test: User Login - Authentication",
                  "// Enhanced Assertions: 5-Layer Validation Pattern (Phase 2.4.5)",
                  "// ============================================================",
                  "",
                  "// Layer 1: Status Code (Basic Success)",
                  "pm.test('[Auth] Status code is 200 OK', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "// Layer 2: Response Format (Structure Validation)",
                  "pm.test('[Auth] Response is JSON format', function() {",
                  "    pm.response.to.be.json;",
                  "    pm.response.to.have.header('Content-Type', /application\\/json/);",
                  "});",
                  "",
                  "// Layer 3: Required Fields Present (Schema Validation)",
                  "pm.test('[Auth] Response contains required authentication fields', function() {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json).to.have.property('token');",
                  "    // Note: WeSign API may return different field structure",
                  "    // Adjust based on actual response (userId, email, etc.)",
                  "});",
                  "",
                  "// Layer 4: Field Types Correct (Type Validation)",
                  "pm.test('[Auth] Token is a string', function() {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json.token).to.be.a('string');",
                  "    pm.expect(json.token.length).to.be.above(0);",
                  "});",
                  "",
                  "// Layer 5: Business Logic Validated (Business Rules)",
                  "pm.test('[Auth] JWT token format is valid', function() {",
                  "    const json = pm.response.json();",
                  "    // JWT format: header.payload.signature (3 base64 parts separated by dots)",
                  "    const tokenParts = json.token.split('.');",
                  "    pm.expect(tokenParts.length).to.be.at.least(2); // At minimum 2 parts",
                  "    // Full JWT validation (3 parts) - may vary by implementation",
                  "    if (tokenParts.length >= 3) {",
                  "        pm.expect(json.token).to.match(/^[A-Za-z0-9-_]+\\.[A-Za-z0-9-_]+\\.[A-Za-z0-9-_]+$/);",
                  "    }",
                  "});",
                  "",
                  "// Capture token for subsequent tests",
                  "if (pm.response.code === 200) {",
                  "    const json = pm.response.json();",
                  "    pm.collectionVariables.set('jwtToken', json.token);",
                  "    console.log('\u2705 [Phase 2.4.5 Enhanced] JWT token captured for subsequent requests');",
                  "    console.log('   Token length: ' + json.token.length + ' characters');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
