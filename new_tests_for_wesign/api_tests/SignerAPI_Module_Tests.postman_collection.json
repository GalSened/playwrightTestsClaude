                  "    pm.expect(body).to.not.include('<script>');",
                  "    pm.expect(body).to.not.include(\"alert('xss')\");",
                  "    pm.expect(body).to.not.include('onerror=');",
                  "    pm.expect(body).to.not.include('javascript:');",
                  "});",
                  "",
                  "// Layer 5: Business Logic (Sanitization Verified)",
