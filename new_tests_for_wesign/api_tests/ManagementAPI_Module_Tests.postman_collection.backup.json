    {
      "name": "Phase 1 - Authentication Setup",
      "item": [
        {
          "name": "Management Login - SystemAdmin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Login successful or forbidden (no test admin account)', function() {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 403, 401, 404, 405]);",
                  "});",
                  "",
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('managementToken', response.token || response.Token);",
                  "    pm.collectionVariables.set('managementRefreshToken', response.refreshToken || response.RefreshToken);",
                  "    console.log('Management API - Authentication successful');",
                  "} else {",
                  "    console.log('Management API - No test admin account available');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{managementBaseUrl}}/users/login",
              "host": [
                "{{managementBaseUrl}}"
              ],
              "path": [
                "users",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@test.com\",\n  \"password\": \"TestPassword123\"\n}"
            }
          },
          "response": []
        }
      ]
