                "exec": [
                  "pm.test('Status code is 200 or 204 (updated)', function() {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 204, 400, 404, 405, 500]);",
                  "});",
                  "",
                  "pm.test('Response time acceptable', function() {",
                  "    pm.expect(pm.response.responseTime).to.be.below(5000);",
                  "});",
                  "",
                  "if (pm.response.code === 200) {",
                  "    pm.test('Response is JSON', function() {",
                  "        pm.response.to.be.json;",
                  "    });",
                  "    ",
                  "    const response = pm.response.json();",
                  "    pm.test('Updated fields reflected', function() {",
                  "        // Verify the update was successful",
                  "        pm.expect(response).to.have.property('signerMeans');",
                  "        pm.expect(response.signerMeans).to.equal('updated@example.com');",
                  "    });",
                  "    ",
                  "    console.log('\u2705 SingleLink template updated successfully');",
                  "} else if (pm.response.code === 204) {",
                  "    pm.test('Update successful (no content)', function() {",
                  "        pm.expect(true).to.be.true;",
                  "    });",
                  "    console.log('\u2705 SingleLink template updated (204 No Content)');",
