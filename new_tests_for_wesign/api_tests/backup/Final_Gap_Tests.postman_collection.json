			"name": "Gap 3: External Login",
			"item": [
				{
					"name": "External Login - AD/SAML",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('External login endpoint accessible', function() {",
									"    // May return 401, 400, or 501 depending on configuration",
									"    pm.expect(pm.response.code).to.be.oneOf([200, 400, 401, 501, 503]);",
									"});",
									"",
									"// This endpoint may not be fully configured in all environments",
									"// Success (200) indicates proper AD/SAML integration",
									"// 501/503 indicates feature not enabled",
									"// 400/401 indicates authentication issue",
									"",
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.test('Valid response structure', function() {",
									"        pm.expect(response).to.have.property('token');",
									"    });",
									"}"
