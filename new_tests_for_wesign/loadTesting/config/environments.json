      "warnings": [
        "Production environment - minimize load impact",
        "Coordinate with operations team before testing",
        "Monitor system resources during execution"
      ]
    }
  },
  "common": {
    "timeouts": {
      "http_req_timeout": "30s",
      "http_req_connecting": "10s",
      "http_req_tls_handshaking": "10s"
    },
    "userAgent": "WeSign-K6-LoadTest/1.0",
    "headers": {
      "Accept": "application/json",
      "Content-Type": "application/json"
    },
    "retrySettings": {
      "maxRetries": 3,
      "retryDelay": "1s"
    }
  }
